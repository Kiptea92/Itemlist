<?xml version="1.0" encoding="utf-8"?>

<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>A RimWorld of Magic</li>
        </mods>
        <match Class="PatchOperationAdd">
            <xpath>Defs</xpath>
            <value>
                <TwitchToolkit.Command>
                    <defName>MyPawnClass</defName>
                    <label>viewer class</label>
                    <command>mypawnclass</command>
                    <commandDriver>SirRandoo.ToolkitUtils.TMagic.Commands.PawnClass</commandDriver>
                    <description>Shows information about your current RimWorld of Magic class. This command will onyl be usable when RimWorld of Magic is installed.</description>
                </TwitchToolkit.Command>
            </value>
        </match>
    </Operation>
</Patch>
