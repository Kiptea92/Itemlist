<?xml version="1.0" encoding="utf-8"?>

<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>A RimWorld of Magic</li>
        </mods>
        <match Class="PatchOperationAdd">
            <xpath>Defs</xpath>
            <value>
                <TwitchToolkit.Command>
                    <defName>MyPawnClass</defName>
                    <label>viewer class</label>
                    <command>mypawnclass</command>
                    <commandDriver>SirRandoo.ToolkitUtils.Commands.PawnClassCommand</commandDriver>
                    
                    <modExtensions>
                        <li Class="SirRandoo.ToolkitUtils.CommandExtension">
                            <Description>Shows information about your current RimWorld of Magic class.</Description>
                        </li>
                    </modExtensions>
                </TwitchToolkit.Command>
            </value>
        </match>
    </Operation>
</Patch>
